	<style type="text/css">
	body { 
		background: #fff; 
		padding: 0 5px !important; 
		font: 101%/1.3 tahoma,verdana,arial,sans-serif; 
	}
	#music_select { width: 400px; height: 24px; font-size: 105%; }
	#music_tags { width: 550px; height: 60px; }
