/** ***********************************************************************************
The functions for showing mutiful messages of an issue
*/
// reset the left variable 'currentPage' of 'smartlists' plugin of jQuery in javascirpt interpreter
$.currentPage = 1;

$.smartlist({
	baseName:               "<%=_listId%>",
	itemClass:              "item",
	showFlagCount:          true,
	itemFlagClass:          "flags",
	itemFlagSeparator:      " | ",
	itemChangeEffect:       "FadeAppear",
	pageChangeDuration:     10,
	pageChangeEffect:       "FadeAppear",
	numItemsPerPage:        3,
	paginationLeft:         "\u00ab",
	paginationRight:        "\u00bb",
	maxPaginationLinks:     20,
	defaultDropdownOptText: "<%=_("All Message's Writers")%>"
});

