/*
**	Portfolio side panel expand function
*/
function portfolioPanel(panelId){	
	
	MUI.accordionPanels(panelId);
	
	MUI.clearMainPanel();
	
	var mainPanelId = '<%=pagefn.MAINPANEL %>'; 
	
	new MUI.Column({
		container:mainPanelId, id: 'portfolioColumn', placement: 'main', 
		sortable: false, width: 300, resizeLimit: [200,400] 
	});
	
	new MUI.Column({
		container:mainPanelId, id: 'accountColumn', placement: 'right',  
		sortable: false, width: 500, resizeLimit: [200,400] 
	});
	
	
	new MUI.Panel({
		id: 'editPortfolioPanel', header:false, column: 'portfolioColumn',
		contentURL:'portfolio/portfolio.ks/page_portfolio'
	});
	
	new MUI.Panel({
		id: 'editAccountPanel', header:false, column: 'accountColumn',
		contentURL:'portfolio/portfolio.ks/page_account'
	});
	
		
};

